<div class="container-fluid" ng-controller="SystemInfo">
    <tabset>
        <tab heading="系统概要" select="overview.show()">
            <div class="row row-in-tab">
                <div class="col-sm-7">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">主机信息</h3>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-3 control-label">主机名</label>
                                    <div class="col-sm-7">
                                        <input type="text" class="form-control" ng-model="localhost.hostname" />
                                    </div>
                                    <div class="col-sm-2">
                                        <button type="button" class="btn btn-default" ng-click="saveHostname">保存</button>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">操作系统</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static">{{localhost.system}}({{localhost.dist_name}}&nbsp;{{localhost.dist_version}})</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">设备架构</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static">{{localhost.machine}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">系统内核</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static">{{localhost.release}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Storlever</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static">{{localhost.version}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">运行时间</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static">{{localhost.uptime}},&nbsp;Load average:{{localhost.loadavg[0]|number:2}}&nbsp;{{localhost.loadavg[1]|number:2}}&nbsp;{{localhost.loadavg[2]|number:2}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3 control-label">Dist ID</label>
                                    <div class="col-sm-9">
                                        <p class="form-control-static">{{localhost.dist_id}}</p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="col-sm-5">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">CPU信息</h3>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-4 control-label">cache_size</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static">{{cpulist[0].cache_size}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-4 control-label">cpu_MHz</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static">{{cpulist[0].cpu_MHz}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-4 control-label">processor</label>
                                    <div class="col-sm-8">
                                        <p class="form-control-static">{{cpulist[0].processor}}</p>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-4 control-label">model_name</label>
                                    <div class="col-sm-12">
                                        <p class="form-control-static">{{cpulist[0].model_name}}</p>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">SELinux</h3>
                        </div>
                        <div class="panel-body">
                            <form class="form-horizontal" role="form">
                                <div class="form-group">
                                    <label for="inputPassword" class="col-sm-4 control-label">状态</label>
                                    <div class="col-sm-4">
                                        <p class="form-control-static">{{selinux.state}}</p>
                                    </div>
                                    <div class="col-sm-4">
                                        <button type="button" class="btn btn-default" ng-click="saveHostname">关闭</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row row-in-tab">
                <div class="col-sm-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">CPU利用率</h3>
                        </div>
                        <div class="panel-body">
                            <div class="container-fluid">
                                <canvas id="cpu-line" class="chart chart-line" data="overview.cpu.data" labels="overview.cpu.labels" series="overview.cpu.series" options="overview.cpu.options"></canvas> 
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">内存信息</h3>
                        </div>
                        <div class="panel-body">
                        </div>
                    </div>
                </div>
            </div>
        </tab>
        <tab heading="系统配置" select="selectConfig()">Short Labeled Justified content</tab>
        <tab heading="系统维护" select="selectMaintain()">Long Labeled Justified content</tab>
    </tabset>
</div>